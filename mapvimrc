map <S-SPACE> :FloatermToggle<CR>
map <LEADER>W :TMiniBufExplorerCloseAllOthers<CR>
map <C-1> :call ToggleBetweenNERDTreeAndBufExplorer()<CR>
map <C-!> :call CloseNERDTreeAndBufExplorer()<CR>

" moving between window
nmap <C-h> <C-w>h
nmap <C-j> <C-w>j
nmap <C-k> <C-w>k
nmap <C-l> <C-w>l

map 0<LEADER> :MRU<CR><Down><CR>

" Macvim mapping
if has("gui_macvim")
  map  <D-s> <ESC>:wa<CR>
  vmap <D-s> <ESC>:w<CR>
  cmap <D-s> <ESC>:w<CR>
  omap <D-s> <ESC>:w<CR>
  imap <silent> <D-s> <ESC>:w<CR>

  map <D-w> :call CommandW()<CR>

  " move around window
  imap <D-a> <ESC>A
  imap <D-i> <ESC>I
  imap <D-h> <Left>
  imap <D-j> <Down>
  imap <D-k> <Up>
  imap <D-l> <Right>
  imap <D-w> <Right><ESC>wi
  imap <D-e> <Right><ESC>ea
  imap <D-b> <ESC>bi
  imap <D-d> <ESC>xi
  imap <D-x> <ESC>lxi

  "delete next and previous word in insert mode
  imap <D-[> <ESC>lvBxi
  imap <D-]> <ESC>lvExi

  "map scrolling
  nmap <D-f> <C-f>
  nmap <D-b> <C-b>


  "resize window
  nmap <D-h> 5<C-w>>
  nmap <D-j> <C-w>+
  nmap <D-k> <C-w>-
  nmap <D-l> <C-w><

  map <D-P> $a<Space><ESC>p
  map <D-3> :call ToggleTagList()<CR>
  map <D-@> :call ToggleTransparency()<CR>
  imap <D-@> <ESC>:call ToggleTransparency()<CR>a
  map <D-!> :call CloseNERDTreeAndBufExplorer()<CR>
  map <D-1> :call ToggleBetweenNERDTreeAndBufExplorer()<CR>

elseif has('gui_running')
  map  <M-s> <ESC>:wa<CR>
  vmap <M-s> <ESC>:w<CR>
  cmap <M-s> <ESC>:w<CR>
  omap <M-s> <ESC>:w<CR>
  imap <silent> <M-s> <ESC>:w<CR>

  map <M-w> :call CommandW()<CR>

  " move around window
  imap <M-a> <ESC>A
  imap <M-i> <ESC>I
  imap <M-h> <Left>
  imap <M-j> <Down>
  imap <M-k> <Up>
  imap <M-l> <Right>
  imap <M-w> <Right><ESC>wi
  imap <M-e> <Right><ESC>ea
  imap <M-b> <ESC>bi
  imap <M-d> <ESC>xi
  imap <M-x> <ESC>lxi

  "delete next and previous word in insert mode
  imap <M-[> <ESC>lvBxi
  imap <M-]> <ESC>lvExi

  "map scrolling
  nmap <M-f> <C-f>
  nmap <M-b> <C-b>
  
  
  "resize window
  nmap <M-h> 5<C-w>>
  nmap <M-j> <C-w>+
  nmap <M-k> <C-w>-
  nmap <M-l> <C-w><



  map <M-P> $a<Space><ESC>p
  map <M-3> :call ToggleTagList()<CR>
  map <M-@> :call ToggleTransparency()<CR>
  imap <M-@> <ESC>:call ToggleTransparency()<CR>a
  map <M-!> :call CloseNERDTreeAndBufExplorer()<CR>
  map <M-1> :call ToggleBetweenNERDTreeAndBufExplorer()<CR>

  "more macvim simulation stuff
  map <M-q> :qa!<CR>
